<div class="container-fluid">

  <div class="row justify-content-center">
    <h1>Restaurants</h1>
  </div>

  <div class="row justify-content-center p-3">
    <%= link_to(new_restaurant_path, class: "btn btn-success") do  %>
              Add a restaurant
            <% end %>

  </div>


    <div class="cards">
      <% @restaurants.each do |restaurant| %>
        <ul>
          <ul><%= restaurant.name %></ul>
           <ul><%= link_to(restaurant, class: "btn btn-secondary") do  %>
              Show
            <% end %>

   <%= link_to 'Destroy', restaurant, method: :delete, data: { confirm: 'Are you sure?' } %></ul>

        </ul>
      <% end %>
      </div>



  <br>

</div>



